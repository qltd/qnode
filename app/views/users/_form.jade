extends ../layouts/default

block body_content
  article.panel
    .container
      if page_heading
        h1= page_heading 
      form(method='post', action=form_action)
        p
          label Username:
            input(type='text', name='username')
        p
          label Password:
            input(type='password', name='password')
        p
          if submit_button_title
            input(type='submit', value=submit_button_title)
          else
            input(type='submit')
