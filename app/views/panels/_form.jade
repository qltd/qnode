extends ../layouts/adminForm

block body_content
  article.panel
    .container
      if pageHeading
        h1= pageHeading 
      form.admin-form(method='post')
        #title
          input(type='text', name='title', placeholder='Title*', value=panel.title)
        #body
          textarea(name='body', placeholder='Body', cols='10', rows='5')
            = panel.body
        #position
          input.position(type='number', name='position', placeholder='Position', value=panel.position)
        #submit
          input(type='submit')
