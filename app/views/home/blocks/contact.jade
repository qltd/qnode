if panel && panel.Contact
  article#contact.contact.panel
    .container
      h2= panel.Contact.title
      .content
        p= panel.Contact.body
        form(action='/contacts/new', method='post')
          input(name='name', placeholder='Name*', type='text', value=contact.name)
          input(name='email', placeholder='Email*', type='text', value=contact.email)
          input(name='company', placeholder='Company*', type='text', value=contact.company)
          textarea(name='comments', placeholder='Comments*', cols='10', rows='5')
            = contact.comments
          input#contact-submit(type='submit', value='Submit')
